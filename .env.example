# Environment variables file for LEGO Voice Controller
# Copy this to .env and adjust as needed

# LM Studio Configuration
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=local-model

# LEGO Hub Configuration  
LEGO_HUB_TIMEOUT=10
MOTOR_PORT=A
MOTOR_SPEED_FORWARD=50
MOTOR_SPEED_BACKWARD=-50

# Voice Recognition Settings
VOICE_TIMEOUT=5
VOICE_PHRASE_TIMEOUT=3
RECOGNITION_ENGINE=google

# Application Settings
DEBUG=False
LOG_LEVEL=INFO